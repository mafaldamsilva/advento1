  <meta charset="UTF-8">
  <title>Desafios de Advento</title>
  <style>
    /* Fundo com gradiente suave */
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(120deg, #3b0a45, #5d2677, #9b72cf);
      background-size: 400% 400%;
      animation: gradientMove 15s ease infinite;
      color: #f8f1ff;
    }

    @keyframes gradientMove {
      0% {background-position: 0% 50%;}
      50% {background-position: 100% 50%;}
      100% {background-position: 0% 50%;}
    }

    /* Container central */
    .container {
      max-width: 900px;
      margin: 50px auto;
      padding: 30px;
      background: rgba(255, 255, 255, 0.12);
      border-radius: 20px;
      backdrop-filter: blur(6px);
      box-shadow: 0 0 25px rgba(0,0,0,0.25);
    }

    /* Títulos */
    h1 {
      text-align: center;
      font-size: 40px;
      color: #ffe5ff;
      text-shadow: 0 0 12px rgba(255, 230, 255, 0.7);
      margin-bottom: 10px;
    }

    h2 {
      color: #ffe0fa;
      border-left: 4px solid #ffd3fa;
      padding-left: 10px;
      margin-top: 30px;
    }

    /* Caixas dos desafios */
    .desafio {
      background: rgba(255, 255, 255, 0.18);
      border-radius: 14px;
      padding: 20px;
      margin-top: 15px;
      box-shadow: 0 0 12px rgba(255, 255, 255, 0.1);
    }

    .desafio p {
      font-size: 17px;
      line-height: 1.6;
      color: #f7eaff;
    }

    /* Linha decorativa */
    .separator {
      height: 2px;
      background: linear-gradient(to right, transparent, #ffd7ff, transparent);
      margin: 40px 0;
    }

    /* Botão gerar novamente */
    button {
      display: block;
      margin: 40px auto 10px;
      padding: 12px 28px;
      font-size: 18px;
      color: #3f0b47;
      background: #ffddf7;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      box-shadow: 0 0 10px rgba(255,255,255,0.3);
      transition: 0.25s;
    }

